{
  "name": "Omnicomplete",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Smart search for your bookmarks & openned tabs",
  "icons": {
    "24": "images/icon-24.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon-24.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "bookmarks",
    "history"
  ],
  "content_scripts": [
    {
	  "matches": ["<all_urls>"],
      "js": [
      	  "scripts/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
